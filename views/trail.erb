<% content_for :header_links do %>
  <form action="/trails/sort" method="post">
    <label for="sort_order">Sort Trails By:</label>
    <select name="sort_order" id="sort_order">
      <option value="asc">Ascending</option>
      <option value="desc">Descending</option>
    </select> 
    
    <select name="sort_field" id="sort_field">
      <option value="distance_round_trip">Distance Round Trip</option>
      <option value="elevation_gain_ft">Elevation Gain</option>
      <option value="avg_round_trip_time">Average Time Round Trip</option>
      <option value="num_favorites">Number Times Favorited</option>
      <option value="num_visits">Number Times Visited</option>
    </select> 
    <button type="submit">Sort!</button>
  </form>
<% end %>

<div class="card" style="width:500px">
  <img class="card-img-top trail_img" src="/images/<%= @trail[:id] %>.png" alt="Photo of the trail: <%= @trail[:name] %>" width ="300px" height = "400px">
  <div class="card-body">
    <h4 class="card-title">Name: <%= @trail[:name] %></h4>
    <ul>
      <li>Distance Round Trip: <%= @trail[:distance_round_trip] %> miles</li>
      <li>Elevation Gain: <%= @trail[:elevation_gain]%> feet</li>
      <li>Average Completion Time: <%= @trail[:avg_round_trip_time] %> hours</li>
    </ul>
  </div>
</div>


<form action="/trails/<%= find_prior_trail(@index) %>" method="get">
  <button type="submit">Previous Trail</button>
</form>
<form action="/trails/<%= find_next_trail(@index) %>" method="get">
  <button type="submit">Next Trail</button>
</form>